#!/bin/sh
LD_LIBRARY_PATH=/opt/wordpress/mysql/lib:/opt/wordpress/mysql/../common/lib${LD_LIBRARY_PATH:+:$LD_LIBRARY_PATH}
export LD_LIBRARY_PATH
case "$@" in
  *--no-defaults*)
    exec $0.bin "$@"
    ;;
  *--defaults-extra-file*)
    exec $0.bin "$@"
    ;;
esac
exec $0.bin --defaults-file=/opt/wordpress/mysql/my.cnf "$@"
